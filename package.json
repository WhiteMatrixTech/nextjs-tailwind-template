{
  "name": "nextjs-tailwind-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "start": "next start",
    "build": "next build",
    "postbuild": "next-sitemap",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "lint:script": "eslint -c ./.eslintrc.js --ext .ts,.tsx,.js,.jsx",
    "lint:style": "stylelint --fix \"src/**/*.{css,scss}\"",
    "pre-commit": "lint-staged",
    "prepare": "husky install"
  },
  "dependencies": {
    "@types/node": "18.15.11",
    "@types/react": "18.0.34",
    "@types/react-dom": "18.0.11",
    "autoprefixer": "10.4.14",
    "classnames": "^2.3.2",
    "eslint-config-next": "13.3.0",
    "i18next": "^22.4.15",
    "next": "13.4.1",
    "next-i18next": "^13.2.2",
    "next-seo": "^6.0.0",
    "next-sitemap": "^4.0.7",
    "postcss": "8.4.21",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-i18next": "^12.2.2",
    "sass": "^1.62.0",
    "tailwindcss": "3.3.1",
    "typescript": "5.0.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "@svgr/webpack": "^7.0.0",
    "@white-matrix/eslint-config": "^1.2.6",
    "@white-matrix/prettier-config": "^1.1.2",
    "commitlint": "^17.5.1",
    "eslint": "8.38.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "postcss-scss": "^4.0.6",
    "stylelint": "^15.4.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recess-order": "^4.0.0",
    "stylelint-config-standard": "^32.0.0",
    "stylelint-config-standard-scss": "^8.0.0",
    "stylelint-prettier": "^3.0.0"
  },
  "lint-staged": {
    "*.{scss,css}": "npm run lint:style",
    "src/**/*.{js,jsx,ts,tsx}": "npm run lint:script"
  }
}
